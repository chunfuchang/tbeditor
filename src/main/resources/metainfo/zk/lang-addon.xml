<language-addon>
    <addon-name>tbeditor</addon-name>
  	<version>
		<version-class>org.zkoss.tbeditor.Version</version-class>
		<version-uid>0.0.8-SNAPSHOT</version-uid>
		<zk-version>8.0.0-SNAPSHOT</zk-version><!-- or later -->
	</version>
    
	<language-name>xul/html</language-name>
	<component>
		<component-name>tbeditor</component-name> <!-- required -->
		<component-class>org.zkoss.tbeditor.Tbeditor</component-class> <!-- required -->
		<widget-class>tbeditor.Tbeditor</widget-class> <!-- required -->
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>mold/tbeditor.js</mold-uri>

			<!--
			== Tip in advance ==
				You don't have to specify a css.dsp if you need not ,
				but usually you need it.

				You could assign a .css file ,too.

				The css.dsp is almost as same as CSS file ,
				but have more powerful enhancement.	(like EL support.)
			====
			-->
			<css-uri>css/tbeditor.css.dsp</css-uri>
		</mold>
	</component>
</language-addon>